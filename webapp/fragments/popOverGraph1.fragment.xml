<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Popover showHeader="true" contentWidth="auto" placement="Top">
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<HBox>
					<Label text="Price Info" class="popOverDateLabel"></Label>
				</HBox>
				<ToolbarSpacer/>
				<Button icon="sap-icon://decline" press="onClosePopOver1"/>
			</Toolbar>
		</customHeader>
		<content>
			<HBox>
				<VBox class="popOverVboxClass">
					<Label text="Commodity: " class="popOverLabel"></Label>
					<Label text="Sub-Commodity: " class="popOverLabel"></Label>
					<Label text="Approved Price: " class="popOverLabel"></Label>
					<Label text="Approved Date: " class="popOverLabel"></Label>
				</VBox>
				<VBox class="popOverVboxClass">
					<Label text="CAPACITOR-CERAMIC" class="popOverLabel" ></Label>
					<Label text="RESISTOR" class="popOverLabel" ></Label>
					<Label text="{oPriceTrendGraphModel>/approvedPrice}" class="popOverLabel" ></Label>
					<Label text="{oPriceTrendGraphModel>/approvedDate}" class="popOverLabel" ></Label>
				</VBox>
			</HBox>
		</content>
	</Popover>
</core:FragmentDefinition>